Функция ПечатьАнкеты(МассивОбъектов, ОбъектыПечати)

	ТабличныйДокумент = Новый ТабличныйДокумент;
	ТабличныйДокумент.КлючПараметровПечати = "ПараметрыПечати_Анкета";
	
	Макет = УправлениеПечатью.МакетПечатнойФормы("Документ.дф_Доставка.ПФ_MXL_Анкета");
	
	ДанныеДокументов = ПолучитьДанныеДокументов(МассивОбъектов);
	
	ПервыйДокумент = Истина;
	
	Пока ДанныеДокументов.Следующий() Цикл
		
		Если Не ПервыйДокумент Тогда
			// Все документы нужно выводить на разных страницах.
			ТабличныйДокумент.ВывестиГоризонтальныйРазделительСтраниц();
		КонецЕсли;
		
		ПервыйДокумент = Ложь;
		
		НомерСтрокиНачало = ТабличныйДокумент.ВысотаТаблицы + 1;
		
		ВывестиТелоАнкеты(ДанныеДокументов, ТабличныйДокумент, Макет);
		
		// В табличном документе необходимо задать имя области, в которую был 
		// выведен объект. Нужно для возможности печати комплектов документов.
		УправлениеПечатью.ЗадатьОбластьПечатиДокумента(ТабличныйДокумент, 
		НомерСтрокиНачало, ОбъектыПечати, ДанныеДокументов.Ссылка);		
		
	КонецЦикла;	
	
	Возврат ТабличныйДокумент;
	
КонецФункции

Функция ПечатьТранспортнойНакладной(МассивОбъектов, ОбъектыПечати)
	
	ТабличныйДокумент = Новый ТабличныйДокумент;
	ТабличныйДокумент.КлючПараметровПечати = "ПараметрыПечати_ТранспортнаяНакладная";
	
	Макет = УправлениеПечатью.МакетПечатнойФормы("Документ.дф_Доставка.ПФ_MXL_ТранспортнаяНакладная");
	
	ДанныеДокументов = ПолучитьДанныеДокументов(МассивОбъектов);
	
	ПервыйДокумент = Истина;
	
	Пока ДанныеДокументов.Следующий() Цикл
		
		Если Не ПервыйДокумент Тогда
			// Все документы нужно выводить на разных страницах.
			ТабличныйДокумент.ВывестиГоризонтальныйРазделительСтраниц();
		КонецЕсли;
		
		ПервыйДокумент = Ложь;
		
		НомерСтрокиНачало = ТабличныйДокумент.ВысотаТаблицы + 1;
		
		ВывестиЗаголовокТранспортнойНакладной(ДанныеДокументов, ТабличныйДокумент, Макет);
		
		ВывестиШапкуТЧТранспортнойНакладной(ДанныеДокументов, ТабличныйДокумент, Макет);
		
		ВывестиТЧТранспортнойНакладной(ДанныеДокументов, ТабличныйДокумент, Макет);
		
		ВывестиПодвалТранспортнойНакладной(ДанныеДокументов, ТабличныйДокумент, Макет);
		
		// В табличном документе необходимо задать имя области, в которую был 
		// выведен объект. Нужно для возможности печати комплектов документов.
		УправлениеПечатью.ЗадатьОбластьПечатиДокумента(ТабличныйДокумент, 
		НомерСтрокиНачало, ОбъектыПечати, ДанныеДокументов.Ссылка);		
		
	КонецЦикла;	
	
	Возврат ТабличныйДокумент;

	
КонецФункции

Функция ПечатьДоговорDOCX(МассивОбъектов)
	
    ОфисныеДокументы = Новый Соответствие;
    
    МакетДокумента = УправлениеПечатью.МакетПечатнойФормы("Документ.дф_Доставка.ПФ_DOC_ДоговорНаДоставку");
    Макет = УправлениеПечатью.ИнициализироватьМакетОфисногоДокумента(МакетДокумента, Неопределено);  
        
    ОписаниеОбластей = Новый Структура;
    УправлениеПечатью.ДобавитьОписаниеОбласти(ОписаниеОбластей, "Шапка", "Общая");
    УправлениеПечатью.ДобавитьОписаниеОбласти(ОписаниеОбластей, "Тело", "Общая");
    УправлениеПечатью.ДобавитьОписаниеОбласти(ОписаниеОбластей, "Подвал", "Общая");

    ДанныеДокументов = ПолучитьДанныеДокументовДляДоговора(МассивОбъектов);
    
	Пока ДанныеДокументов.Следующий() Цикл
		
		ПараметрыДокумента = Новый Структура;
		ПараметрыДокумента.Вставить("Дата", Формат(ДанныеДокументов.Дата, "ДЛФ=DD"));
		ПараметрыДокумента.Вставить("Номер", ПрефиксацияОбъектовКлиентСервер.НомерНаПечать(ДанныеДокументов.Номер));
		ПараметрыДокумента.Вставить("Организация", ДанныеДокументов.Организация);
		ПараметрыДокумента.Вставить("Контрагент", ДанныеДокументов.Контрагент);
		ПараметрыДокумента.Вставить("АдресДоставки", ДанныеДокументов.АдресДоставки);
		ПараметрыДокумента.Вставить("ОрганизацияИНН", ДанныеДокументов.ОрганизацияИНН);
		ПараметрыДокумента.Вставить("ОрганизацияКПП", ДанныеДокументов.ОрганизацияКПП);
		ПараметрыДокумента.Вставить("КонтрагентИНН", ДанныеДокументов.КонтрагентИНН);
		ПараметрыДокумента.Вставить("КонтрагентКПП", ДанныеДокументов.КонтрагентКПП);
		ПараметрыДокумента.Вставить("НаименованиеКонтактногоЛица", ДанныеДокументов.НаименованиеКонтактногоЛица);
		ПараметрыДокумента.Вставить("ДолжностьКонтактногоЛица", ДанныеДокументов.ДолжностьКонтактногоЛица);
		ПараметрыДокумента.Вставить("СуммаДокумента", ДанныеДокументов.СуммаДокумента);

		ПечатнаяФорма = УправлениеПечатью.ИнициализироватьПечатнуюФорму(Неопределено, Неопределено, Макет);
        
        ОбластьШапка = УправлениеПечатью.ОбластьМакета(Макет, ОписаниеОбластей["Шапка"]);
        УправлениеПечатью.ПрисоединитьОбластьИЗаполнитьПараметры(ПечатнаяФорма, ОбластьШапка, ПараметрыДокумента);
		
		ОбластьТело = УправлениеПечатью.ОбластьМакета(Макет, ОписаниеОбластей["Тело"]);
		УправлениеПечатью.ПрисоединитьОбластьИЗаполнитьПараметры(ПечатнаяФорма, ОбластьТело, ПараметрыДокумента);
		
		ОбластьПодвал = УправлениеПечатью.ОбластьМакета(Макет, ОписаниеОбластей["Подвал"]);
		УправлениеПечатью.ПрисоединитьОбластьИЗаполнитьПараметры(ПечатнаяФорма, ОбластьПодвал, ПараметрыДокумента);
		
		АдресХранилищаПечатнойФормы = УправлениеПечатью.СформироватьДокумент(ПечатнаяФорма);
        ОфисныеДокументы.Вставить(АдресХранилищаПечатнойФормы, Строка(ДанныеДокументов.Ссылка));
        УправлениеПечатью.ОчиститьСсылки(ПечатнаяФорма);
        
    КонецЦикла;        
    
    УправлениеПечатью.ОчиститьСсылки(Макет);
    
    Возврат ОфисныеДокументы;
    
КонецФункции

Функция ПолучитьДанныеДокументов(МассивОбъектов)
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	дф_Доставка.Ссылка КАК Ссылка,
	|	дф_Доставка.Номер КАК Номер,
	|	дф_Доставка.Дата КАК Дата,
	|	дф_Доставка.Организация КАК Организация,
	|	дф_Доставка.Контрагент КАК Контрагент,
	|	дф_Доставка.Товары.(
	|		Ссылка КАК Ссылка,
	|		НомерСтроки КАК НомерСтроки,
	|		Номенклатура КАК Номенклатура,
	|		Количество КАК Количество
	|	) КАК Товары,
	|	дф_Доставка.АдресДоставки КАК АдресДоставки,
	|	дф_Доставка.Организация.ИНН КАК ОрганизацияИНН,
	|	дф_Доставка.Организация.КПП КАК ОрганизацияКПП,
	|	дф_Доставка.Контрагент.ИНН КАК КонтрагентИНН,
	|	дф_Доставка.Контрагент.КПП КАК КонтрагентКПП
	|ИЗ
	|	Документ.дф_Доставка КАК дф_Доставка
	|ГДЕ
	|	дф_Доставка.Ссылка В(&МассивОбъектов)";
	
	Запрос.УстановитьПараметр("МассивОбъектов", МассивОбъектов);
	
	Возврат Запрос.Выполнить().Выбрать();
	
КонецФункции

